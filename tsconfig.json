{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./dist",
        "types": [
            "reflect-metadata",
            "@types/node",
            "jest"
        ],
        "baseUrl": "./"
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "spec"
    ]
}
